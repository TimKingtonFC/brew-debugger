{
  "name": "vm-debug",
  "displayName": "VM Debug",
  "version": "0.1.0",
  "publisher": "timk",
  "description": "Debugger for VM programs",
  "author": {
    "name": "Tim Kington"
  },
  "license": "MIT",
  "keywords": [
    "multi-root ready"
  ],
  "engines": {
    "vscode": "^1.66.0"
  },
  "icon": "images/mock-debug-icon.png",
  "categories": [
    "Debuggers"
  ],
  "private": true,
  "scripts": {
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --tsconfig=./tsconfig.json --external:vscode --format=cjs --platform=node --outfile=dist/extension.js",
    "watch": "npm run -S esbuild-base -- --sourcemap --sources-content=false --watch",
    "esbuild-web": "esbuild ./src/web-extension.ts --bundle --tsconfig=./tsconfig.json --external:vscode --format=cjs --platform=browser --outfile=dist/web-extension.js",
    "watch-web": "npm run -S esbuild-web -- --sourcemap --sources-content=false --watch",
    "build": "npm run -S esbuild-base -- --sourcemap --sources-content=false && npm run -S esbuild-web -- --sourcemap --sources-content=false",
    "package": "vsce package",
    "publish": "vsce publish",
    "publish-pre-release": "vsce publish --pre-release",
    "vscode:prepublish": "rimraf dist && npm run -S esbuild-base -- --minify && npm run -S esbuild-web -- --minify",
    "test": "npm run typecheck"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^14.14.37",
    "@types/vscode": "^1.66.0",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "@vscode/debugadapter": "^1.56.0",
    "@vscode/debugadapter-testsupport": "^1.56.0",
    "await-notify": "^1.0.1",
    "base64-js": "^1.5.1",
    "esbuild": "^0.14.29",
    "eslint": "^8.12.0",
    "events": "^3.3.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.2",
    "path-browserify": "^1.0.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.3",
    "url": "^0.11.0",
    "vsce": "^2.7.0"
  },
  "main": "./dist/extension.js",
  "browser": "./dist/web-extension.js",
  "activationEvents": [
    "onDebugResolve:vm",
    "onLanguage:vmbrw",
    "onLanguage:vmlang",
    "onLanguage:vmasm"
  ],
  "workspaceTrust": {
    "request": "never"
  },
  "contributes": {
    "languages": [
      {
        "id": "vmlang",
        "extensions": [
          ".vm"
        ]
      },
      {
        "id": "vmasm",
        "extensions": [
          ".s"
        ]
      },
      {
        "id": "vmbrw",
        "extensions": [
          ".brw"
        ]
      }
    ],
    "grammars": [
      {
        "language": "vmlang",
        "scopeName": "source.vmlang",
        "path": "./syntaxes/vmlang.tmGrammar.json"
      },
      {
        "language": "vmasm",
        "scopeName": "source.vmasm",
        "path": "./syntaxes/vmasm.tmGrammar.json"
      },
      {
        "language": "vmbrw",
        "scopeName": "source.vmbrw",
        "path": "./syntaxes/vmbrw.tmGrammar.json"
      }
    ],
    "menus": {
      "editor/title/run": [
        {
          "command": "extension.vm-debug.debugEditorContents",
          "when": "resourceLangId == vmlang || resourceLangId == vmasm || resourceLangId == vmbrw",
          "group": "navigation@2"
        }
      ],
      "commandPalette": [
        {
          "command": "extension.vm-debug.debugEditorContents",
          "when": "resourceLangId == vmlang || resourceLangId == vmasm || resourceLangId == vmbrw"
        }
      ]
    },
    "commands": [
      {
        "command": "extension.vm-debug.debugEditorContents",
        "title": "Debug File",
        "category": "VM Debug",
        "enablement": "!inDebugMode",
        "icon": "$(debug-alt)"
      }
    ],
    "breakpoints": [
      {
        "language": "vmlang"
      },
      {
        "language": "vmasm"
      },
      {
        "language": "vmbrw"
      }
    ],
    "debuggers": [
      {
        "type": "vm",
        "languages": [
          "vmlang",
          "vmasm",
          "vmbrw"
        ],
        "label": "VM Debug",
        "configurationAttributes": {
          "launch": {
            "required": [
              "projectName",
              "port"
            ],
            "properties": {
              "projectName": {
                "type": "string",
                "description": "Absolute path to the VM file or folder to debug.",
                "default": "${workspaceFolder}/main.vm"
              },
              "port": {
                "type": "integer",
                "description": "Listen port of VM host",
                "default": 8888
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Automatically stop after launch.",
                "default": true
              }
            }
          }
        },
        "configurationSnippets": [
          {
            "label": "VM Debug: Launch",
            "description": "A new configuration for debugging a vm file.",
            "body": {
              "type": "vm",
              "request": "launch",
              "name": "Debug VM file",
              "projectName": "\\${workspaceFolder}/main.vm",
              "port": 8888,
              "stopOnEntry": true
            }
          }
        ]
      }
    ],
    "views": {
      "debug": [
        {
          "id": "memoryDumpView",
          "type": "webview",
          "name": "Memory Viewer",
          "when": "inDebugMode && debugType == vm",
          "icon": "images/mock-debug-icon.png"
        }
      ]
    },
    "webviewResources": [
      "media"
    ]
  }
}
